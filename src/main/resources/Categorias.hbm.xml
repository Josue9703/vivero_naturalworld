<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="sv.edu.udb.www.vivero_naturalworld.entities.Categorias" table="categorias"
           schema="vivero_naturalworld">
        <id name="idCategoria">
            <column name="id_categoria" sql-type="varchar(50)" length="50"/>
        </id>
        <property name="nombreCategoria">
            <column name="nombre_categoria" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="descripcion">
            <column name="descripcion" sql-type="text"/>
        </property>
    </class>
</hibernate-mapping>